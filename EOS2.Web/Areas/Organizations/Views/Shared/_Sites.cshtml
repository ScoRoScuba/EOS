@model EOS2.Web.Areas.Organizations.ViewModels.Customers.CustomerEditViewModel

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <a class="btn btn-default btn-sm pull-right" href="@Url.RouteUrl("CustomerOrganization_NewSite", new { CustomerId = Model.Id })">
            <span class="glyphicon glyphicon-plus"></span> [[[Add Site]]]
        </a>
        <h3 class="panel-title">[[[Sites]]]</h3>
    </div>
    <div class="panel-body">
    @if (!string.IsNullOrWhiteSpace(TempData["ControllerActionMessageSite"] as string))
    {
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert"
                aria-hidden="true">
            &times;
        </button>
        @(TempData["ControllerActionMessageSite"] as string)
    </div>
    }
                                                          
    @if (Model.Sites.Any())
    {
        <table class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>[[[Name]]]</th>
                    <th>[[[ZIP Code]]]</th>
                    <th></th>
                </tr>
            </thead>        
            <tbody>
                @foreach (var item in Model.Sites)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.PostalCode</td>
                        <td>
                            @Html.RouteLink("[[[Details]]]", "CustomerOrganization_Site", new { CustomerId = Model.Id, SiteId = item.Id }, new { @class = "btn btn-default btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>
</div>
