@model EOS2.Web.Areas.Organizations.ViewModels.Customers.CustomerEditViewModel

<h2>[[[Site Details For Customer]]] - @Html.DisplayFor(m => m.Name)</h2>
<hr />

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "" }) : 
        @Html.DisplayFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address) : 
        @Html.DisplayFor(m => m.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PostalCode) : 
        @Html.DisplayFor(m => m.PostalCode, new { @class = "form-control input-postalcode" })
    </div>

    @Html.Partial("_Sites", Model)